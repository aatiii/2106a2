<% include ../partials/header.ejs %>

<div class="container ads">
    <h2 class="text-center">Edit Ad</h2>
    <form method="post">
        <div class="form-group">
            <label for="title">Ad Title</label>
            <input name="title" class="form-control" id="title" required value="<%= ads.title %>" >
        </div>
        <div class="form-group">
            <label for="price">Price</label>
            <input name="price" class="form-control" id="price" required value="<%= ads.price %>" >
        </div>
        
        <div class="form-group">
            <label for="description">Description</label>
            <textarea name="description" class="form-control" id="description" rows="3" ><%= ads.description %></textarea>
        </div>
        
        <button class="btn btn-primary">Save</button>
    </form>
</div>


<% include ../partials/footer.ejs %>