<% include ./partials/header.ejs %>

    <div class="container login register">
        <div class="card card-container">
           
            <p id="profile-name" class="profile-name-card">Sign Up</p>
            <form class="form-signin" method="post">
                <input type="email" id="username" class="form-control" placeholder="Email address" required autofocus>
                <input type="password" id="password" class="form-control" placeholder="Password" required>
                <input type="password" id="inputConfirm" class="form-control" placeholder="Comfirm Password" required />
                <button class="btn btn-lg btn-info btn-block btn-signin">Register</button>
            </form><!-- /form -->
            <a href="/login" class="forgot-password">
                Already have an account?
            </a>
        </div><!-- /card-container -->
    </div><!-- /container -->


